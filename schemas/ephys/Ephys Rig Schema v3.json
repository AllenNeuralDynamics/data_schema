{
	"type": "object",
	"properties": {
		"Rig ID": {
			"type": "string"
		},
		"Devices": {
			"type": "object",
			"properties": {
				"Probes": {
					"type": "array",
					"items": { "$ref": "#/$defs/probies" },
					"uniqueItems": true
				},
				"Cameras": {
					"type": "array",
					"items": {"$ref": "#/$defs/camies" },
					"uniqueItems": true
				},
				"Lasers": {
					"type": "array",
					"items": {"$ref": "#/$defs/lasies" },
					"uniqueItems": true
				},
				"Visual Monitor": {
					"type": "array",
					"items": {"$ref": "#/$defs/monities"},
					"uniqueItems": true
				},
				"Running Disk": {
					"type": "array",
					"items": {"$ref": "#/$defs/diskies"},
					"maxItems": 1
				}
			}
		}
	},
	"$defs": {
		"lasies": {
			"type": "object",
			"properties": {
				"Name": {
					"type": "string",
					"enum": ["Laser A", "Laser B"]
				},
				"Manufacturer": {
					"type": "string"
				},
				"Model": {
					"type": "string"
				},
				"Serial number": {
					"type": "string"
				},
				"Wavelength (nm)": {
					"type": "integer"
				}
			},
			"required": [
				"Name",
				"Manufacturer",
				"Model",
				"Serial number",
			]
		},
		"camies": {
			"type": "object",
			"properties": {
				"Name": {
					"type": "string",
					"enum": ["Body Camera", "Eye Camera", "Face Camera"]
				},
				"Manufacturer": {
					"type": "string"
				},
				"Model": {
					"type": "string"
				},
				"Serial number": {
					"type": "string"
				},
				"Position x": {
					"type": "number"
				},
				"Position y": {
					"type": "number"
				},
				"Angle (deg)": {
					"type": "number"
				} ,
				"Recording software": {
					"type": "string"
				},
				"Recording software version": {
					"type": "number"
				}
			},
			"required": [
				"Name",
				"Manufacturer",
				"Model",
				"Serial number",
				"Position x",
				"Position y",
				"Angle (deg)"
			]	
		},
		"probies": {
			"type": "object",
			"properties": {
				"Name": {
					"type": "string",
					"enum": ["Probe A", "Probe B", "Probe C", "Probe D", "Probe E", "Probe F", "Probe G", "Probe H", "Probe I", "Probe J"]
				},
				"Type": {
					"type": "string"
				},
				"Serial number": {
					"type": "string"
				}
			},
			"required": ["Name", "Type", "Serial number"]
		},
		"monities": {
			"type": "object",
			"properties": {
				"Refresh rate (Hz)": {
					"type": "integer"
				},
				"Width (pixels)": {
					"type": "integer"
				},
				"Height (pixels)": {
					"type": "integer"
				},
				"Distance (cm)": {
					"type": "number"
				},
				"Position x": {
					"type": "number"
				},
				"Position y": {
					"type": "number"
				},
				"Angle (deg)": {
					"type": "number"
				},
				"Contrast (percent)": {
					"type": "integer"
				},
				"Brightness": {
					"type": "integer"
				}
			},
			"required": [
				"Refresh rate (Hz)",
				"Width (pixels)",
				"Height (pixels)",
				"Distance (cm)",
				"Position x",
				"Position y",
				"Angle (deg)",
				"Contrast (percent)",
				"Brightness"
			]
		},
		"diskies": {
			"type": "object",
			"properties": {
				"Radius (cm)": {
					"type": "number"
				},
				"Surface": {
					"type": "string",
					"enum": ["none", "foam"]
				},
				"Date surface replaced": {
					"type": "string",
					"format": "date-time"
				}
			},
			"required": ["Radius (cm)"]
		}		
	}
}