{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "const": "0.0.1",
            "description": "schema version"
        },
        "Specimen ID": {
            "type": "integer"
        },
        "Headframe": {
            "type": "array",
            "items": { "$ref": "#/$defs/frame" },
            "uniqueItems": true
        },
        "Craniotomy": {
            "type": "array",
            "items": {"$ref": "#/$defs/cran" },
            "uniqueItems": true
        },
        "Injections": {
            "type": "array",
            "items": {"$ref": "#/$defs/injection" },
            "uniqueItems": true
        },
        "Tissue Prep": {
            "type": "array",
            "items": {"$ref": "#/$defs/prep"},
            "uniqueItems": true
        },
        "Water restriction protocol": {
            "type": "number"
        },
        "Water restriction start date": {
            "type": "string",
            "format": "date"
        },
        "Training protocol": {
            "type": "number"
        },
        "Training start date": {
            "type": "string",
            "format": "date"
        },
        "Notes": {
            "type": "string"
        }
    },
    
    "$defs": {
        "frame": {
            "type": "object",
            "properties": {
                "Date": {
                    "type": "string",
                    "format": "date"
                },
                "Experimenter first name": {"type": "string"},
                "Experimenter last name": {"type": "string"},
                "Headframe protocol ID": {"type": "number"},
                "Headframe part number": {"type": "number"},
                "Headframe material": {
                    "type": "string",
                    "enum": ["Titanium", "Steel"]
                },
                "Well part number": {"type": "number"},
                "Well type": {
                    "type": "string",
                    "enum": ["A","B"]
                },
                "Notes": {"type": "string"}
            },
            "required": [
                "Date",
                "Experimenter first name",
                "Experimenter last name",
                "Headframe protocol ID",
                "Headframe part number",
                "Headframe material" 
            ]
        },
        "cran": {
            "type": "object",
            "properties": {
                "Date": {
                    "type": "string",
                    "format": "date"
                },
                "Experimenter first name": {"type": "string"},
                "Experimenter last name": {"type": "string"},
                "Craniotomy protocol ID": {"type": "number"},
                "Craniotomy coordinates ML": {"type": "number"},
                "Craniotomy coordinates AP": {"type": "number"},
                "Craniotomy size (mm)": {"type": "number"},
                "Implant part number": {"type": "number"},
                "Dura removed": {"type": "boolean"},
                "Protective material": {
                    "type": "string",
                    "enum": [
                        "Duragel", 
                        "SORTA-clear", 
                        "Kwik-Cast",
                        "Other - see notes"
                    ]
                },
                "Notes": {"type": "string"}
            },
            "required": [
                "Date",
                "Experimenter first name",
                "Experimenter last name",
                "Craniotomy protocol ID",
                "Craniotomy coordinates ML",
                "Craniotomy coordinates AP",
                "Craniotomy size (mm)"
            ]
        },
        "injection": {
            "type": "object",
            "properties": {
                "Date": {
                    "type": "string",
                    "format": "date"
                },
                "Experimenter first name": {"type": "string"},
                "Experimenter last name": {"type": "string"},
                "Injection protocol ID": {"type": "number"},
                "Injection coordinates ML": {"type": "number"},
                "Injection coordinates AP": {"type": "number"},
                "Injection coordinates depth": {"type": "number"},
                "Injection angle (deg)": {"type": "number"},
                "Injection virus": {"type": "string"},
                "Injection virus ID": {"type": "number"},
                "Injection type": {
                    "type": "string",
                    "enum": ["Iontophoresis","Nanoject"]
                },
                "Injection Duration": {
                    "type": "string",
                    "format": "time"
                },
                "Notes": {"type": "string"},
                "Injection class": {
                    "anyOf": [
                        {
                            "type": "object",
                            "properties": {
                                "Injection type": {
                                    "type": "string",
                                    "const": "Nanoject"
                                },
                                "Injection volume (nL)": {"type": "number"}
                            },
                            "required": [
                                "Injection type",
                                "Injection volume (nL)"
                            ]
                        },
                        {
                            "type": "object",
                            "properties": {
                                "Injection type": {
                                    "type": "string",
                                    "const": "Iontophoresis"
                                },
                                "Injection current (uA)": {"type": "number"},
                                "Alternating current": {"type": "string"}
                            },
                            "required": [
                                "Injection type",
                                "Injection current (uA)",
                                "Alternating current"
                            ]
                        }
                    ]
                }
            },            
            "required": [
                "Date",
                "Experimenter first name",
                "Experimenter last name",
                "Injection protocol ID",
                "Injection coordinates ML",
                "Injection coordinates AP",
                "Injection coordinates depth",
                "Injection angle (deg)",
                "Injection virus",
                "Injection type",
                "Injection duration"
            ]
        },
        "prep": {
            "type": "object",
            "properties": {
                "Date": {
                    "type": "string",
                    "format": "date"
                },
                "Experimenter first name": {"type": "string"},
                "Experimenter last name": {"type": "string"},
                "Type": {
                    "type": "string",
                    "enum": ["expansion", "perfusion", "dissection"]
                },
                "Protocol ID": {"type": "string"},
                "Notes": {"type": "string"}
            },
            "required": [
                "Date",
                "Experimenter first name",
                "Experimenter last name",
                "Type",
                "Protocol ID"
            ]
        }
    },
    "required": [
        "Specimen ID"
        ]
}
