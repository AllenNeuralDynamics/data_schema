{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "Version": {
			"type": "string",
			"const": "0.0.1",
			"description": "schema version"
		},
        "License": {
            "type": "string",
            "const": "CC-BY-4.0"
        },
        "Data level": {
            "type": "string",
            "enum": ["raw data", "derived data"]
        },
        "Directory": {
            "type": "string",
            "description": "directory for data and metadata"
        },
        "Institution": {
            "type": "string",
            "enum": ["AIND", "AIBS"]
        },
        "Group": {
            "type": "string",
            "enum": ["ephys", "ophys", "MSMA", "behavior"]
        },
        "Project name": {
            "type": "string"
        },
        "Project ID": {
            "type": "string"
        }
    }
}