{
	"type": "object",
	"properties":{
		"version": {
			"type": "string",
			"const": "0.1.0",
			"description": "schema version",
			"title": "Version"
		},
		"describedBy": {
            "type": "string",
            "const": "https://github.com/AllenNeuralDynamics/data_schema/blob/main/schemas/imaging/acquisition.json",
            "description": "The URL reference to the schema.",
            "title": "Described by"
        },
		"institution": {
			"type": "string",
			"enum": ["AIND","AIBS"],
			"title": "Institution"
		},
		"experimenter_full_name": {
			"type": "string",
			"title": "Experimenter full name",
			"description": "First and last name of the experimenter."
		},
		"session_start_time": {
			"type": "string",
			"format": "date-time",
			"title": "Session start time"
		},
		"specimen_id": {
			"type": "integer",
			"title": "Specimen ID"
		},
		"project_name": {
			"type": "string",
			"title": "Project name"
		},
		"project_id": {
			"type": "string",
			"title": "Project ID"
		},
		"instrument_id": {
			"type": "string",
			"title": "Instrument ID"
		},
		"session_end_time": {
			"type": "string",
			"format": "date-time",
			"title": "Session end time"
		},
		"ref_1": {
			"type": "string",
			"enum": ["X", "Y", "Z"],
			"title": "Ref1",
			"description": "Reference axis 1 for stitching"
		},
		"ref_2": {
			"type": "string",
			"enum": ["X", "Y", "Z"],
			"title": "Ref2",
			"description": "Reference axis 2 for stitiching"
		},
		"ref_3": {
			"type": "string",
			"enum": ["X", "Y", "Z"],
			"title": "Ref3",
			"description": "Reference axis 3 for stitching"
		},
		"voxel_size_1": {
			"type": "number",
			"title": "Voxel size 1 (um)",
			"units": "um"
		},
		"voxel_size_2": {
			"type": "number",
			"title": "Voxel size 2 (um)",
			"units": "um"
		},
		"voxels_size_3": {
			"type": "number",
			"title": "Voxel size 3 (um)",
			"units": "um"
		},
		"additional_parameters": {
			"type": "string",
			"title": "Additional parameters"
		},
		"positions": {
			"type": "array",
			"items": {"$ref": "#/$defs/position"},
			"uniqueItems": true,
			"title": "Positions"
		},
		"lasers": {
			"type": "array",
			"items": {"$ref": "#/$defs/laser"},
			"uniqueItems": true,
			"title": "Lasers"
		},
		"notes": {
			"type": "string",
			"title": "Notes"
		}

	},
	"$defs": {
		"position": {
			"type": "object",
			"properties": {
				"x_start_um": {
					"type": "number"
				},
				"x_end_um": {
					"type": "number"
				},
				"y_start_um": {
					"type": "number"
				},
				"x_step_um": {
					"type": "number"
				}
			},
			"required": [
				"x_start_um",
				"x_end_um",
				"y_start_um",
				"x_step_um"
			]
		},
		"laser": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string",
					"title": "Name"
				},
				"channel": {
					"type": "integer",
					"title": "Channel"
				},
				"enabled": {
					"type": "boolean",
					"title": "Enabled"
				},
				"wavelength": {
					"type": "integer",
					"title": "Wavelength (nm)",
					"units": "nm"
				},
				"power": {
					"type": "number",
					"title": "Power"
				},
				"delay": {
					"type": "number",
					"title": "Delay (s)",
					"units": "s"
				}
				
			},
			"required": [
				"name",
				"channel",
				"enabled",
				"wavelength",
				"power",
				"delay"
			]
		}
	},
	"required": [
		"version",
		"institution",
		"experimenter_full_name",
		"session_start_time",
		"session_end_time",
		"specimen_id",
		"instrument_id",
		"positions",
		"lasers",
		"ref_1",
		"ref_2",
		"ref_3",
		"voxel_size_1",
		"voxel_size_2",
		"voxel_size_3"
	]
}