{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"version": {
			"type": "string",
			"const": "0.0.1",
			"description": "schema version"
		},
		"Instrument ID": {
			"type": "string",
			"description": "unique identifier for this instrument configuration"
		},	
		"Microscope Type": {
	    	"type": "string",
	    	"enum": ["mesoSPIM", "exaSPIM", "diSPIM", "confocal", "two photon","other"]
	  	},
	  	"Microscope Manufacturer": {
	    	"type": "string",
			"enum": ["Olympus", "Leica", "custom"]
	  	},
	  	"Microscope Model": {
	    	"type": "number"
	  	},
	  	"Microscope Serial Number": {
	    	"type": "string"
	  	},
	  	"Microscope Location": {
			"type": "string"
	  	},
	  	"Temperature control": {
			"type": "boolean"
	  	},
	  	"Humidity control": {
			"type": "boolean"
	  	},
	  	"Vibration control": {
			"type": "boolean"
	  	},
	  	"Optical table model": {
			"type": "string"
	  	},
	  	"Optical table size": {
			"type": "number"
	  	},
	  	"Objectives": {
			"type": "array",
			"items": { "$ref": "#/$defs/objective" }
		},
		"Detectors": {
			"type": "array",
			"items": { "$ref": "#/$defs/detector"}
		},
		"Light sources": {
			"type": "array",
			"items": { "$ref": "#/$defs/lightsource"}
		},
		"Flourescence filters": {
			"type": "array",
			"items": { "$ref": "#/defs/filter"}
		},
		"Motorized stages": {
			"type": "array",
			"items": { "$ref": "#/defs/stage"}
		},
		"Additional devices": {
			"type": "array",
			"items": { "$ref": "#/defs/device"}
		},
		"Notes": {
			"type": "string"
		}
	  },
	  "$defs": {
		"objective": {
			"type": "object",
			"properties": {
				"Manufacturer": {
					"type": "string",
					"enum": ["Olympus", "Nikon", "Special Optics"] 
				},
				"Model": {
					"type": "number"
				},
				"Serial number": {
					"type": "string"
				},
				"Numerical aperture": {
					"type": "number",
					"enum": [0.4, 0.7]
				},
				"Magnification": {
					"type": "string",
					"enum": ["10X", "20X"]
				},
				"Immersion": {
					"type": "string",
					"enum": ["air","water", "oil"]
				}
			},
			"required": [
				"Manufacturer",
				"Model",
				"Numerical aperture",
				"Magnification",
				"Immersion"
			]
		},
		"detector": {
			"type": "object",
			"properties": {
				"Type": {
					"type": "string",
					"enum": ["Camera", "PMT", "other"]
				},
				"Manufacturer": {
					"type": "string",
					"enum": ["Hamamatsu", "PCO", "other"]
				},
				"Model": {
					"type": "string"
				},
				"Serial number": {
					"type": "string"
				},
				"Data interface": {
					"type": "string",
					"enum": ["USB", "CameraLink", "Coax", "other"]
				},
				"Cooling": {
					"type": "string",
					"enum": ["air", "water"]
				},
				"Immersion": {
					"type": "string",
					"enum": ["air","water", "oil"]
				}
			},
			"required": [
				"Type",
				"Manufacturer",
				"Model",
				"Data interface",
				"Cooling",
				"Immersion"
			]
		},
		"lightsource": {
			"type": "object",
			"properties": {
				"Type": {
					"type": "string",
					"enum": ["lamp", "laser", "LED", "other"]
				},
				"Manufacturer": {
					"type": "string",
					"enum": ["Vortran", "Coherent", "other"]
				},
				"Model": {
					"type": "string"
				},
				"Serial number": {
					"type": "string"
				},
				"Coupling": {
					"type": "string",
					"enum": ["Free-space", "SMF", "MMF", "other"]
				},
				"Wavelength (nm)": {
					"type": "integer",
					"enum": [405, 488, 561, 638]
				},
				"Max power (mW)": {
					"type": "integer",
					"enum": [100, 200]
				}
			},
			"required": [
				"Type",
				"Manufacturer",
				"Model",
				"Coupling",
				"Wavelength (nm)",
				"Max power (mW)"
			]
		},
		"filter": {
			"type": "object",
			"properties": {
				"Type": {
					"type": "string",
					"enum": ["Long pass", "Band pass"]
				},
				"Manufacturer": {
					"type": "string",
					"enum": ["Chroma", "Semrock"]
				},
				"Model": {
					"type": "string"
				},
				"Size (mm)": {
					"type": "integer",
					"enum": [25, 32]
				}
			},
			"required": [
				"Type",
				"Manufacturer",
				"Model",
				"Size (mm)"
			]
		},
		"stage": {
			"type": "object",
			"properties": {
				"Type": {
					"type": "string",
					"enum": ["Camera", "PMT", "other"]
				},
				"Manufacturer": {
					"type": "string",
					"enum": ["Hamamtsu", "PCO", "other"]
				},
				"Model": {
					"type": "string"
				},
				"Serial number": {
					"type": "string"
				}
			},
			"required": [
				"Type",
				"Manufacturer",
				"Model"
			]
		},
		"device": {
			"type": "object",
			"properties": {
				"Type": {
					"type": "string",
					"enum": ["Tunable lens", "NI DAQ", "Scanning mirror", "other"]
				},
				"Manufacturer": {
					"type": "string",
					"enum": ["Hamamtsu", "PCO", "other"]
				},
				"Model": {
					"type": "string"
				},
				"Serial number": {
					"type": "string"
				},
				"Comments": {
					"type": "string"
				}
			}
		}


	},
	"required": [
		"Microscope Type",
	    "Microscope Manufacturer",
	    "Microscope Model",
	    "Microscope Serial Number",
	    "Objectives",
		"Detectors",
		"Light sources"
	]
}