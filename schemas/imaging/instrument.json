{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "const": "0.1.0",
            "description": "schema version",
            "title": "Version"
        },
        "describedBy": {
            "type": "string",
            "const": "https://github.com/AllenNeuralDynamics/data_schema/blob/main/schemas/imaging/instrument.json",
            "description": "The URL reference to the schema.",
            "title": "Described by"
        },
        "instrument_id": {
            "type": "string",
            "description": "unique identifier for this instrument configuration",
            "title": "Instrument ID"
        },	
        "microscope_type": {
            "type": "string",
            "enum": ["mesoSPIM", "exaSPIM", "diSPIM", "smartSPIM", "Confocal", "Two photon","Other"],
            "title": "Microscope type"
        },
        "microscope_manufacturer": {
            "type": "string",
            "enum": ["Olympus", "Leica", "LifeCanvas", "Custom"],
            "title": "Microscope manufacturer"
        },
        "microscope_model": {
            "type": "number",
            "title": "Microscope model"
        },
        "microscope_serial_number": {
            "type": "string",
            "title": "Microscope serial number"
        },
        "microscope_location": {
            "type": "string",
            "title": "Microscope location"
        },
        "temperature_control": {
            "type": "boolean",
            "title": "Temperature control"
        },
        "humidity_control": {
            "type": "boolean",
            "title": "Humidity control"
        },
        "vibration_control": {
            "type": "boolean",
            "title": "Vibration control"
        },
        "optical_table_model": {
            "type": "string",
            "title": "Optical table model"
        },
        "optical_table_size": {
            "type": "number",
            "title": "Optical table size"
        },
        "objectives": {
            "type": "array",
            "title": "Objectives",
            "items": { "$ref": "#/$defs/objective" },
            "uniqueItems": true
        },
        "detectors": {
            "type": "array",
            "title": "Detectors",
            "items": { "$ref": "#/defs/detector"},
            "uniqueItems": true
        },
        "light_sources": {
            "type": "array",
            "title": "Light sources",
            "items": { "$ref": "#/$defs/lightsource"},
            "uniqueItems": true
        },
        "fluorescence_filters": {
            "type": "array",
            "title": "Fluorescence filters",
            "items": { "$ref": "#/$defs/filter"},
            "uniqueItems": true
        },
        "motorized_stages": {
            "type": "array",
            "title": "Motorized stages",
            "items": { "$ref": "#/$defs/stage"},
            "uniqueItems": true
        },
        "additional_devices": {
            "type": "array",
            "title": "Additional devices",
            "items": { "$ref": "#/$defs/device"},
            "uniqueItems": true
        },
        "calibration_date": {
            "type": "string",
            "format": "date",
            "title": "Calibration date",
            "description": "Date of most recent calibration"
        },
        "calibration_data": {
            "type": "string",
            "title": "Calibration data",
            "description": "Path to calibration data from most recent calibration"
        },
        "daq_device_name": {
            "type": "string",
            "description": "DAQ device name as it appears to the PC",
            "title": "DAQ device name"
        },
        "daq_output_trigger_name": {
            "type": "string",
            "title": "DAQ output trigger name"
        },
        "daq_update_frequency": {
            "type": "number",
            "title": "DAQ update frequency (Hz)",
            "units": "Hz"
        },
        "daq_ao_names_to_channel": {
            "type": "array",
            "title": "DAQ analog outputs",
            "items": { "$ref": "#/$defs/ao"},
            "uniqueItems": true
        },
        "com_ports": {
            "type": "array",
            "title": "COM ports",
            "items": {"$ref": "#/$defs/com"},
            "uniqueItems": true
        },
        "waveform_start_of_frame_delay": {
            "type": "number",
            "title": "Waveform start of frame delay (s)",
            "units": "s"
        },
        "notes": {
            "type": "string"
        }
    },
    "required": [
        "version",
        "describedBy",
        "microscope_location",
        "microscope_type",
        "microscope_manufacturer",
        "microscope_model",
        "microscope_serial_number",
        "objectives",
        "detectors",
        "light_sources"
    ],
    "$defs": {
        "ao": {
            "type": "object",
            "properties": {
                "hardware_name": {
                    "type": "string",
                    "title": "Hardware name"
                },
                "ao_channel": {
                    "type": "integer",
                    "title": "AO channel"
                }
            },
            "required": ["hardware_name", "ao_channel"]
        },
        "com": {
            "type": "object",
            "properties": {
                "hardware_name": {
                    "type": "string",
                    "title": "Hardware name"
                },
                "com_port": {
                    "type": "string",
                    "title": "COM port"
                }
            },
            "required": ["hardware_name", "com_port"]
        },
        "objective": {
            "type": "object",
            "properties": {
                "manufacturer": {
                    "type": "string",
                    "title": "Manufacturer",
                    "enum": ["Olympus", "Nikon", "Special Optics", "ThorLabs"] 
                },
                "model": {
                    "type": "number",
                    "title": "Model"
                },
                "serial_number": {
                    "type": "string",
                    "title": "Serial number"
                },
                "numerical_aperture": {
                    "type": "number",
                    "title": "Numerical aperture",
                    "enum": [0.2, 0.4, 0.7]
                },
                "magnification": {
                    "type": "string",
                    "title": "Magnification",
                    "enum": ["3.6X", "10X", "20X"]
                },
                "immersion": {
                    "type": "string",
                    "title": "Immersion",
                    "enum": ["air","water", "oil", "multi"]
                }
            },
            "required": [
                "manufacturer",
                "model",
                "numerical_aperture",
                "magnification",
                "immersion"
            ]
        },
        "detector": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "title": "Type",
                    "enum": ["Camera", "PMT", "other"]
                },
                "manufacturer": {
                    "type": "string",
                    "title": "Manufacturer",
                    "enum": ["Hamamatsu", "PCO", "other"]
                },
                "model": {
                    "type": "string",
                    "title": "Model"
                },
                "serial_number": {
                    "type": "string",
                    "title": "Serial number"
                },
                "data_interface": {
                    "type": "string",
                    "title": "Data interface",
                    "enum": ["USB", "CameraLink", "Coax", "other"]
                },
                "cooling": {
                    "type": "string",
                    "title": "Cooling",
                    "enum": ["air", "water"]
                },
                "immersion": {
                    "type": "string",
                    "title": "Immersion",
                    "enum": ["air","water", "oil"]
                }
            },
            "required": [
                "type",
                "manufacturer",
                "model",
                "data_interface",
                "cooling"
            ]
        },
        "lightsource": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "title": "Type",
                    "enum": ["lamp", "laser", "LED", "other"]
                },
                "name": {
                    "type": "string",
                    "title": "Name"
                },
                "manufacturer": {
                    "type": "string",
                    "title": "Manufacturer",
                    "enum": ["Vortran", "Coherent", "other"]
                },
                "model": {
                    "type": "string",
                    "title": "Model"
                },
                "serial_number": {
                    "type": "string",
                    "title": "Serial number"
                },
                "coupling": {
                    "type": "string",
                    "title": "Coupling",
                    "enum": ["Free-space", "SMF", "MMF", "other"]
                },
                "wavelength": {
                    "type": "integer",
                    "title": "Wavelength (nm)",
                    "units": "nm",
                    "enum": [405, 488, 561, 638]
                },
                "max_power": {
                    "type": "integer",
                    "title":" Maximum power (mW)",
                    "units": "mW",
                    "enum": [100, 200]
                },
                "driver": {
                    "type": "string",
                    "title": "Driver"
                },
                "color": {
                    "type": "string",
                    "title": "Color"
                },
                "filter_index": {
                    "type": "int",
                    "title": "Filter index"
                },
                "disable_voltage": {
                    "type": "number",
                    "title": "Disable voltage (V)",
                    "units": "V"
                },
                "enable_voltage": {
                    "type": "number",
                    "title": "Enable voltage (V)",
                    "units": "V"
                }
            },
            "required": [
                "type",
                "manufacturer",
                "model",
                "coupling",
                "wavelength",
                "max_power"
            ]
        },
        "filter": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "title": "Type",
                    "enum": ["Long pass", "Band pass"]
                },
                "manufacturer": {
                    "type": "string",
                    "title": "Manufacturer",
                    "enum": ["Chroma", "Semrock"]
                },
                "model": {
                    "type": "string",
                    "title": "Model"
                },
                "size": {
                    "type": "integer",
                    "title": "Size (mm)",
                    "units": "mm",
                    "enum": [25, 32]
                },
                "cut_off_frequency": {
                    "type": "integer",
                    "title": "Cut off frequency"
                },
                "cut_on_frequency": {
                    "type": "integer",
                    "title": "Cut on frequency"
                },
                "description": {
                    "type": "string",
                    "title": "Description",
                    "description": "Where/how filter is being used"
                }
            },
            "required": [
                "type",
                "manufacturer",
                "model",
                "size"
            ]
        },
        "stage": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "title": "Type"
                },
                "manufacturer": {
                    "type": "string",
                    "title": "Manufacturer",
                    "enum": ["Hamamtsu", "PCO", "other"]
                },
                "model": {
                    "type": "string",
                    "title": "Model"
                },
                "serial_number": {
                    "type": "string",
                    "title": "Serial number"
                },
                "move_time": {
                    "type": "number",
                    "title": "Stage move time (s)",
                    "description": "Time it takes the stage to move 1 um and settle",
                    "units": "s"
                },
                "backlash_reset_distance": {
                    "type": "number",
                    "title": "Stage backlash reset distance",
                    "units": "um"
                }
            },
            "required": [
                "manufacturer",
                "model",
                "serial_number",
                "move_time",
                "backlash_reset_distance"
            ]
        },
        "device": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["Tunable lens", "DAQ", "Scanning mirror", "Other"],
                    "title": "Type",
                    "description": "Type of device. If Other please describe in Notes"
                },
                "manufacturer": {
                    "type": "string",
                    "title": "Manufacturer",
                    "enum": ["Hamamtsu", "PCO", "other"]
                },
                "model": {
                    "type": "string",
                    "title": "Model"
                },
                "serial_number": {
                    "type": "string",
                    "title": "Serial number"
                },
                "notes": {
                    "type": "string",
                    "title": "Notes"
                }
            }
        }
    }
}