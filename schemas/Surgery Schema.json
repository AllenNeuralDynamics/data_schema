{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "const": "0.0.1",
            "description": "schema version"
        },
        "Specimen ID": {
            "type": "integer"
        },
        "Procedure date": {
            "type": "string",
            "format": "date"
        },
        "Experimenter first name": {
            "type": "string"
        },
        "Experimenter last name": {
            "type": "string"
        },
        "Headframe": {
            "type": "array",
            "items": { "$ref": "#/$defs/frames" },
            "uniqueItems": true
        },
        "Craniotomy": {
            "type": "array",
            "items": {"$ref": "#/$defs/cranes" },
            "uniqueItems": true
        },
        "Injections": {
            "type": "array",
            "items": {"$ref": "#/$defs/injecties" },
            "uniqueItems": true
        },
        "Notes": {
            "type": "string"
        }

    },
    "$defs": {
        "frames": {
            "type": "object",
            "properties": {
                "Headframe protocol ID": {"type": "number"},
                "Headframe part number": {"type": "number"},
                "Headframe material": {
                    "type": "string",
                    "enum": ["Titanium", "Steel"]
                },
                "Well part number": {"type": "number"},
                "Well type": {
                    "type": "string",
                    "enum": ["A","B"]
                }
            },
            "required": [
                "Headframe protocol ID",
                "Headframe part number",
                "Headframe material"
            ]
        },
        "cranes": {
            "type": "object",
            "properties": {
                "Craniotomy protocol ID": {"type": "number"},
                "Craniotomy coordinates ML": {"type": "number"},
                "Craniotomy coordinates AP": {"type": "number"},
                "Craniotomy size (mm)": {"type": "number"},
                "Implant part number": {"type": "number"},
                "Dura removed": {"type": "boolean"},
                "Protective material": {
                    "type": "string",
                    "enum": [
                        "Duragel",
                        "SORTA-clear",
                        "Kwik-Cast",
                        "Other - see notes"
                    ]
                }
            },
            "required": [
                "Craniotomy protocol ID",
                "Craniotomy coordinates ML",
                "Craniotomy coordinates AP",
                "Craniotomy size (mm)"
            ]
        },
        "injecties": {
            "type": "object",
            "properties": {
                "Injection protocol ID": {"type": "number"},
                "Injection coordinates ML": {"type": "number"},
                "Injection coordinates AP": {"type": "number"},
                "Injection coordinates depth": {"type": "number"},
                "Injection angle (deg)": {"type": "number"},
                "Injection virus": {"type": "string"},
                "Injection virus ID": {"type": "number"},
                "Injection duration": {
                    "type": "string",
                    "format": "time"
                },
                "Injection class": {
                    "anyOf": [
                        {
                            "type": "object",
                            "properties": {
                                "Injection type": {
                                    "type": "string",
                                    "const": "Nanoject"
                                },
                                "Injection volume (nL)": {"type": "number"}
                            },
                            "required": [
                                "Injection type",
                                "Injection volume (nL)"
                            ]
                        },
                        {
                            "type": "object",
                            "properties": {
                                "Injection type": {
                                    "type": "string",
                                    "const": "Iontophoresis"
                                },
                                "Injection current (uA)": {"type": "number"},
                                "Alternating current": {"type": "string"}
                            },
                            "required": [
                                "Injection type",
                                "Injection current (uA)",
                                "Alternating current"
                            ]
                        }
                    ]
                }
            },
            "required": [
                "Injection protocol ID",
                "Injection coordinates ML",
                "Injection coordinates AP",
                "Injection coordinates depth",
                "Injection angle (deg)",
                "Injection virus",
                "Injection class",
                "Injection duration"
            ]
        }
    },
    "required": [
        "Specimen ID",
        "Procedure date",
        "Experimenter first name",
        "Experimenter last name"
    ]
}
